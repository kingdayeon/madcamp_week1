<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication_Test1" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Colors -->
        <item name="colorPrimary">@color/nav_selected</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/yellow_50</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/nav_background</item>

        <!-- Remove ripple effects -->
        <item name="colorControlHighlight">@android:color/transparent</item>
        <item name="android:selectableItemBackground">@android:color/transparent</item>
        <item name="android:selectableItemBackgroundBorderless">@android:color/transparent</item>

        <!-- Window background -->
        <item name="android:windowBackground">@color/yellow_10</item>
    </style>
</resources>