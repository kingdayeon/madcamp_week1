<!--<?xml version="1.0" encoding="utf-8"?>-->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="@color/yellow_40">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- 이름과 레벨 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/nameMonText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#22172A"
                android:fontFamily="@font/pretendard_bold"/>

            <TextView
                android:id="@+id/levelText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#22172A"
                android:fontFamily="@font/pretendard_medium"/>
        </LinearLayout>

        <!-- 이미지 섹션 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="start">

            <!-- 배경 사각형과 포켓몬 이미지 -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp">

                <View
                    android:id="@+id/imageBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rounded_background"/>

                <ImageView
                    android:id="@+id/pokemonImage"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"/>
            </FrameLayout>

            <!-- 속성 뱃지 -->
            <TextView
                android:id="@+id/typeBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:background="@drawable/badge_background"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_gravity="start"
                android:fontFamily="@font/pretendard_bold"/>

            <!-- 정보 뱃지들 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_gravity="start">

                <TextView
                    android:id="@+id/schoolBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/info_badge_background"
                    android:textColor="#22172A"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:layout_marginEnd="8dp"
                    android:gravity="center"
                    android:fontFamily="@font/pretendard_medium"/>

                <TextView
                    android:id="@+id/phoneBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/info_badge_background"
                    android:textColor="#22172A"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:fontFamily="@font/pretendard_medium"/>
            </LinearLayout>
        </LinearLayout>

        <!-- 삭제 버튼 -->
        <TextView
            android:id="@+id/deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="친구 삭제"
            android:textColor="#FF0000"
            android:layout_gravity="end"
            android:layout_marginTop="16dp"
            android:padding="8dp"
            android:fontFamily="@font/pretendard_medium"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>